<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="ai.sterling.kchat.domain.chat.model.ChatMessage" />
    </data>

    <RelativeLayout
        style="@style/RowStyle"
        android:id="@+id/message_root_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/image_avatar"
            android:gravity="end"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- The unevenness in the padding is a result of the asymmetry of the bubble / tail -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_message_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingStart="5dp"
                android:paddingEnd="15dp"
                android:background="@drawable/message_sent_2">

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="center_vertical"
                    android:text="@{model.message}"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_profile"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</layout>